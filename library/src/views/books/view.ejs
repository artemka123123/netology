<%- include('../port/layout-start.ejs', {title: title}) %>

<body data-bs-theme="dark">
    <%- include("../port/menu.ejs")  %>

    <div class="mt-5 container d-flex justify-content-center">
        <h1><%= title %></h1>
    </div>

    <div class="mt-3 container justify-content-center">
        <h1 class="h3">Описание</h1>

        <h1 class="h5"><%- book.description %></h1>
    </div>

    <div class="mt-3 container justify-content-center">
        <h1 class="h3">Авторы</h1>

        <h1 class="h5"><%- book.authors %></h1>
    </div>

    <div class="mt-3 container justify-content-center">
        <h1 class="h3">Просмотры</h1>

        <h1 class="h5"><%- views %></h1>
    </div>

    <div class="container d-flex justify-content-center mt-5">
        <a href="/books/edit/<%- book.id%>" class="btn btn-primary">Изменить</a>
    </div>
</body>

<%- include("../port/layout-end.ejs") %>