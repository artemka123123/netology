<div class="card text-start" style="width: 18rem; cursor: pointer;" onclick="location.href = '/books/view/<%- book.id %>'">
    <img src="<%- book.fileCover %>" class="card-img-top" alt="">

    <div class="card-body">
        <a href="/books/view/<%- book.id %>" class="card-title fs-2"><%- book.title %></a>

        <p class="card-text"><%- book.description %></p>

        <p class="card-text fw-light"><%- book.authors %></p>

        <div class="container d-flex justify-content-center gap-5">
            <a href="/books/download/<%- book.id %>" class="btn btn-primary">Скачать</a>

            <form action="/books/delete/<%- book.id %>" method="post">
                <button type="submit" class="btn btn-danger">Удалить</a>    
            </form>    
        </div>
    </div>
</div>